{
    "openapi": "3.1.0",
    "info": {
        "title": "Pet Adoption API",
        "version": "1.0.0",
        "description": "API for retrieving pet details for potential adopters."
    },
    "servers": [
        {
            "url": "https://api.petadoption.com/v1"
        }
    ],
    "paths": {
        "/pets/{petId}": {
            "get": {
                "operationId": "getPetById",
                "summary": "Retrieve full details of a pet",
                "description": "Returns the full record of a pet based on the provided petId.",
                "parameters": [
                    {
                        "$ref": "#/components/parameters/petId"
                    }
                ],
                "responses": {
                    "200": {
                        "description": "Successful response with pet details",
                        "content": {
                            "application/json": {
                                "schema": {
                                    "$ref": "#/components/schemas/Pet"
                                },
                                "examples": {
                                    "example1": {
                                        "summary": "Example of a pet response",
                                        "value": {
                                            "petId": "92b68c58-25ea-4f4e-a17b-c145c82e394a",
                                            "name": "Buddy",
                                            "category": "Dog",
                                            "breed": "Golden Retriever",
                                            "location": "Shelter A",
                                            "status": "available",
                                            "description": "Friendly and energetic dog.",
                                            "tags": [
                                                "friendly",
                                                "energetic"
                                            ]
                                        }
                                    }
                                }
                            }
                        }
                    },
                    "400": {
                        "$ref": "https://api.swaggerhub.com/domains/smartbear-public/ProblemDetails/1.0.0#/components/responses/BadRequest"
                    },
                    "404": {
                        "$ref": "https://api.swaggerhub.com/domains/smartbear-public/ProblemDetails/1.0.0#/components/responses/NotFound"
                    },
                    "500": {
                        "$ref": "https://api.swaggerhub.com/domains/smartbear-public/ProblemDetails/1.0.0#/components/responses/ServerError"
                    }
                }
            }
        }
    },
    "components": {
        "parameters": {
            "petId": {
                "name": "petId",
                "in": "path",
                "required": true,
                "description": "The unique identifier for the pet (UUID format).",
                "schema": {
                    "type": "string",
                    "format": "uuid",
                    "examples": [
                        "92b68c58-25ea-4f4e-a17b-c145c82e394a"
                    ]
                }
            }
        },
        "schemas": {
            "Pet": {
                "type": "object",
                "properties": {
                    "petId": {
                        "type": "string",
                        "format": "uuid",
                        "description": "The unique identifier for the pet.",
                        "examples": [
                            "92b68c58-25ea-4f4e-a17b-c145c82e394a"
                        ]
                    },
                    "name": {
                        "type": "string",
                        "description": "The name of the pet.",
                        "examples": [
                            "Buddy"
                        ]
                    },
                    "category": {
                        "type": "string",
                        "description": "The category of the pet (e.g., Dog, Cat).",
                        "examples": [
                            "Dog",
                            "Cat"
                        ]
                    },
                    "breed": {
                        "type": "string",
                        "description": "The breed of the pet.",
                        "examples": [
                            "Golden Retriever"
                        ]
                    },
                    "location": {
                        "type": "string",
                        "description": "The location of the pet.",
                        "examples": [
                            "Shelter A, Galway"
                        ]
                    },
                    "status": {
                        "type": "string",
                        "enum": [
                            "available",
                            "adopted",
                            "adoption-pending"
                        ],
                        "description": "The adoption status of the pet.",
                        "examples": [
                            "available"
                        ]
                    },
                    "description": {
                        "type": "string",
                        "description": "A brief description of the pet.",
                        "examples": [
                            "Friendly and energetic dog."
                        ]
                    },
                    "tags": {
                        "type": "array",
                        "items": {
                            "type": "string"
                        },
                        "description": "Tags associated with the pet.",
                        "examples": [
                            [
                                "friendly",
                                "energetic"
                            ]
                        ]
                    }
                }
            }
        }
    }
}